Package: fastRhockey
Title: Functions to Access Premier Hockey Federation Play by Play Data
Version: 0.0.1
Authors@R: c(
    person(given = "Ben", family = "Howell", email = "benhowell71@gmail.com", role = c("cre", "aut")),
    person(given = "Saiem", family = "Gilani", email = "saiem.gilani@gmail.com", role = c("ctb")),
