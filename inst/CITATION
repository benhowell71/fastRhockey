year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)

citHeader("To cite the fastRhockey package in publications, use:")

citEntry(entry = "Misc",
         author = personList(
         as.person("Ben Howell"),
         as.person("Saiem Gilani")),
         title = "fastRhockey: The SportsDataverse's R Package for Hockey Data.",
         url = c("fastRhockey.sportsdataverse.org/"),
         year = year,
         note = note,
         textVersion = paste(
    "Ben Howell and Saiem Gilani. fastRhockey: The SportsDataverse's R Package for Hockey Data.",
    "Retrieved from https://fastRhockey.sportsdataverse.org/"
  )
)
